<tr>
  <td class="<%=
    if person.first_name.id == todays.first_name.id
      'correct'
    elsif person.first_name.content == todays.last_name.content
      'partial'
    else
      'incorrect'
    end
  %>">
    <%= person.first_name.content %>
  </td>
  <td class="<%=
    if person.last_name.id == todays.last_name.id
      'correct'
    elsif person.last_name.content == todays.first_name.content
      'partial'
    else
      'incorrect'
    end
  %>">
    <%= person.last_name.content %>
  </td>
  <td class="<%= person.sex.id == todays.sex.id ? 'correct' : 'incorrect' %>">
    <%= person.sex.value %>
  </td>
  <td class="<%=
    if person.pro_situation.id == todays.pro_situation.id
      'correct'
    elsif todays.pro_situation.in? person.pro_situation.get_related
      'partial'
    else
      'incorrect'
    end
  %>">
    <%= (person.sex.value == 'F' and not person.pro_situation.translation_f.nil?) ? person.pro_situation.translation_f : person.pro_situation.content %>
  </td>
  <td class="<%= person.location.id == todays.location.id ? 'correct' : 'incorrect' %>">
    <%= person.location.content %>
  </td>
</tr>
